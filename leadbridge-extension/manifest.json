{
  "manifest_version": 3,
  "name": "LeadBridge AU",
  "version": "1.0.0",
  "description": "Automatically bridge ServiceSeeking leads to tradies in real-time",
  "permissions": [
    "storage",
    "alarms",
    "scripting",
    "activeTab",
    "cookies",
    "notifications"
  ],
  "host_permissions": [
    "https://*.serviceseeking.com.au/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.serviceseeking.com.au/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
